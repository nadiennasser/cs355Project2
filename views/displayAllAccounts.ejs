<div id = "nav">
    <% if(rs.length > 0) { %>
    <table border="1">
        <tr><th>Account Name</th></tr>
        <% for (var i=0; rs.length > i; i++) { %>
        <tr>
            <td><a href="/account/?user_ID=<%= rs[i].user_ID %>"> <%= rs[i].first_name %></a></td>
        </tr>
        <% } %>
    </table>
    <% } else { %>
    No Account exist.
    <% } %>

    <div style="margin-top:10px;">
        <a href="/account/create">Create An Account!</a>
    </div>


</div>

